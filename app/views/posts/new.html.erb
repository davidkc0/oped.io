<center><h1>share an opinion</h1></center>

<%= form_for @post do |f| %>
<% if @post.errors.any? %>
<div class= "error">
<h2>
	<%= pluralize(@post.errors.count, "error") %> Prohibited this post from being saved:
</h2>
<ul>
	<% @post.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
</div>
<%end%>
<div class="col-xs-2">
</div>
<div class = "col-xs-8">
<div class = "panel panel-default">
<p>
<%= f.label  :title %><br>
<%= f.text_field :title %> 
</p>
<p>
<%= f.label :body %><br>
<%= f.text_area :body %>
</p>
<p> 
<%= f.label :tags %>
<%= f.text_field :all_tags %>
</p>

<p><%= f.submit "Publish" %></p>
<% end %>
</div>
</div>

<%= stylesheet_link_tag "user_profile.css" %>

<h1>Edit profile</h1>

<%= form_for(@user, html: {mulipart: true}) do |f| %>

<div class = "edit-item-title">
  <%= f.label :username %>
</div>
<div class = "edit-item-text-field">
  <%= f.text_field :username %>
</div>

<div class = "edit-item-title">
  <%= f.label :url %>
</div>
<div class = "edit-item-text-field">
  <%= f.text_field :userurl %>
</div>

<div class = "edit-item-title">
  <%= f.label :email %>
</div>
<div class = "edit-item-text-field">
  <%= f.text_field :email %>
</div>

<div class = "edit-item-title">
  <%= f.label :bio %>
</div>
<div class = "edit-item-text-field">
  <%= f.text_area :description, placeholder: "Write something about yourself." %>
</div>

<div class = "edit-item-title">
  <%= f.label :photo %>
</div>
<div class = "edit-item-text-field">
  <%= f.file_field :avatar %>
</div>

<br>

<%= f.submit "Save changes" %>

<%end%>
